extends layout

block append stylesheets
  if freddyCss
    style(nonce=nonce)!= freddyCss

block body
  include _modal-storage
  if (!user && !boolean(ctx.query.pricing)) || isBot(ctx.get('User-Agent'))
    #modal-watch-video.modal.fade(
      tabindex="-1",
      role="dialog",
      aria-labelledby="modal-pricing-video-title",
      aria-hidden="true"
    )
      .modal-dialog.modal-lg(role="document")
        .modal-content
          .modal-header.text-center.d-block
            #modal-watch-video-title.h4.d-inline-block.ml-4= t("Product Tour")
            button.close(
              type="button",
              data-dismiss="modal",
              aria-label="Close"
            )
              span(aria-hidden="true") &times;
          .modal-body
            .lazyframe(
              title=t("Forward Email's Paid Plans"),
              data-vendor="youtube_nocookie",
              data-src="https://www.youtube-nocookie.com/embed/N6zjv40zuIY?autoplay=0"
            )

  if !isBot(ctx.get('User-Agent'))
    .fixed-bottom.text-center.d-print-none.d-lg-none
      .bg-dark.p-2.border-top.border-themed
        ul.list-inline.mb-0
          li.list-inline-item
            a.btn.btn-sm.btn-light(href="#free")
              = t("Free")
              = " "
              i.fa.fa-search-plus
          li.list-inline-item
            a.btn.btn-sm.btn-success(href="#enhanced")
              = t("Enhanced")
              = " "
              i.fa.fa-search-plus
          li.list-inline-item
            a.btn.btn-sm.btn-primary(href="#team")
              = t("Team")
              = " "
              i.fa.fa-search-plus

  if (!user && !boolean(ctx.query.pricing)) || isBot(ctx.get('User-Agent'))
    .min-vh-100.d-flex.flex-column(
      id=!isPDF && (ctx.pathWithoutLocale === "/" || ctx.pathWithoutLocale === "/private-business-email") && !isBot(ctx.get("User-Agent")) ? "freddy" : "",
      class=isBot(ctx.get("User-Agent")) ? "" : "text-white"
    )
      - const isSafari = /^((?!chrome|android|crios|fxios).)*safari/i.test(ctx.get("User-Agent"));
      if (!isPDF && (ctx.pathWithoutLocale === '/' || ctx.pathWithoutLocale === '/private-business-email') && !isBot(ctx.get('User-Agent')))
        #stars.user-select-none
        if !isSafari
          #rocket.user-select-none
        #waving.user-select-none(class=isSafari ? "" : "floating-animation")
      .container.my-auto.pt-5
        .row
          .col-12.text-center
            h1.mb-3
              = t("Encrypted Business Email")
            if isBot(ctx.get("User-Agent"))
              p
                = t("Create your free, private, and professional business email.")
                = " "
                != t('Send and receive email as <span class="notranslate font-weight-bold text-nowrap">you@yourdomain.com</span>.')
            if !isBot(ctx.get("User-Agent"))
              a.btn.btn-success.btn-lg.font-weight-bold.text-uppercase.mt-3.mb-3.mb-md-5(
                href=l("/register"),
                data-toggle="modal-anchor",
                data-target="#modal-sign-up"
              )
                = t("Sign up free")
            if isBot(ctx.get("User-Agent"))
              ul.list-inline
                li.list-inline-item.d-block.d-md-inline
                  a.btn.mb-3(
                    class=isBot(ctx.get("User-Agent")) ? "btn-dark" : "btn-light",
                    href=isBot(ctx.get("User-Agent")) ? l("/private-business-email") : l("/private-business-email?pricing=true")
                  )
                    i.fa.fa-fw.fa-layer-group
                    = " "
                    != t("Features")
                //- Product Tour
                if !isBot(ctx.get('User-Agent'))
                  li.list-inline-item.d-block.d-md-inline
                    a.btn.btn-light.mb-3(
                      role="button",
                      data-toggle="modal",
                      data-target="#modal-watch-video",
                      href="https://www.youtube.com/watch?v=N6zjv40zuIY",
                      target="_blank",
                      rel="noopener noreferrer"
                    )
                      i.fab.fa-youtube.text-danger
                      = " "
                      = t("Tour")
                //- Developers
                li.list-inline-item.d-block.d-md-inline
                  if isBot(ctx.get('User-Agent'))
                    a.btn.btn-dark.mb-3(href=l("/blog/docs"))
                      i.fa.fa-code
                      = " "
                      = t("Transactional Email API")
                  else
                    a.btn.btn-light.mb-3(href=l("/blog/docs"))
                      i.fa.fa-code
                      = " "
                      = t("Developers")
        if !isBot(ctx.get('User-Agent'))
          .row
            .col-8.offset-2.col-xl-10.offset-xl-1.text-center
              p.lead.text-white.font-weight-bold= t("Used by")
              ul.list-inline.lead.d-none.d-lg-block
                li.list-inline-item.badge.badge-dark Netflix
                li.list-inline-item.badge.badge-dark Disney Ad Sales
                li.list-inline-item.badge.badge-dark Government of South Australia
                li.list-inline-item.badge.badge-dark Government of Dominican Republic
                li.list-inline-item.badge.badge-dark Government of New South Wales
                li.list-inline-item.badge.badge-dark The University of Maryland
                li.list-inline-item.badge.badge-dark The University of Washington
                li.list-inline-item.badge.badge-dark Tufts University
                li.list-inline-item.badge.badge-dark Swarthmore College
                li.list-inline-item.badge.badge-dark Saint Louis University
                li.list-inline-item.badge.badge-dark David Heinemeier Hansson
                li.list-inline-item.badge.badge-dark
                  = t("430,000+ custom domain names")
              ul.list-inline.d-lg-none
                li.list-inline-item.badge.badge-dark Netflix
                li.list-inline-item.badge.badge-dark Disney Ad Sales
                li.list-inline-item.badge.badge-dark Government of South Australia
                li.list-inline-item.badge.badge-dark Government of Dominican Republic
                li.list-inline-item.badge.badge-dark Government of New South Wales
                li.list-inline-item.badge.badge-dark The University of Maryland
                li.list-inline-item.badge.badge-dark The University of Washington
                li.list-inline-item.badge.badge-dark Tufts University
                li.list-inline-item.badge.badge-dark Swarthmore College
                li.list-inline-item.badge.badge-dark Saint Louis University
                li.list-inline-item.badge.badge-dark David Heinemeier Hansson
                li.list-inline-item.badge.badge-dark
                  = t("430,000+ custom domain names")
      a.text-decoration-none.pt-1.pb-4.pt-lg-4.text-uppercase.text-white.mx-auto(
        href="#learn-more"
      )
        i.fa.fa-angle-double-down
        = " "
        = t("Learn more")
        = " "
        i.fa.fa-angle-double-down

    #learn-more.bg-dark.text-white.py-3.d-block.overflow-hidden.min-vh-100(
      data-ignore-hash-change
    )
      .container.text-center
        .row
          .col-12
            h2.display-5.font-weight-bold.mt-5.mb-3= t("Why use us as your email provider?")
            .lead
              include _feature-list
        hr
        .row
          .col-12
            h2.display-5.font-weight-bold.my-3= t("What makes us different than others?")
            .lead
              ul.list-unstyled.mb-3
                li.mb-3
                  i.fa.fa-fw.fa-check-circle.text-success
                  = " "
                  != t('We\'re <strong class="text-decoration-underline">the only 100% open-source provider</strong>')
                li.mb-3
                  i.fa.fa-fw.fa-check-circle.text-success
                  = " "
                  = t("We don't rely on any third parties (we don't use Amazon SES or an alternative like others)")
                li.mb-3
                  i.fa.fa-fw.fa-check-circle.text-success
                  = " "
                  = t("Our pricing allows you to scale cost effectively (we don't charge per user and you can pay as you go for storage)")
                li.mb-3
                  i.fa.fa-fw.fa-check-circle.text-success
                  = " "
                  = t("Unlike others, your email with us is not stored in a shared relational database alongside everyone else")
                li
                  i.fa.fa-fw.fa-check-circle.text-success
                  = " "
                  != t("We're the world's first and only email service to use <strong>quantum-safe</strong> and <strong>individually encrypted SQLite mailboxes</strong>")
            a.btn.btn-success.font-weight-bold.text-uppercase.text-white(
              href=l("/blog/best-email-service"),
              target="_blank"
            )
              != t("Read Email Service Comparison")
              = " "
              i.fa.fa-angle-right.align-middle
        hr
        .row
          .col-12
            h2.display-5.font-weight-bold.my-3= t("Did you know?")
            p.lead
              != t('Other email services advertise as open-source, but <strong class="text-danger">they do not release the source code to their back-end</strong>.')
              = " "
              != t("The back-end is the <strong>most sensitive part</strong> of an email provider.")
              = " "
              != t("It is also important to use 100% open-source because it builds trust and allows anyone to contribute and independently audit.")
          a.text-decoration-none.pt-1.pb-4.pt-lg-4.text-uppercase.mx-auto.text-white(
            href="#features"
          )
            i.fa.fa-angle-double-down
            = " "
            = t("Features and Pricing")
            = " "
            i.fa.fa-angle-double-down

  .bg-fixed.lazyload.py-3.py-md-4.py-lg-5(
    id=user || (!isBot(ctx.get("User-Agent")) && boolean(ctx.query.pricing)) ? false : "features",
    class=user || (!isBot(ctx.get("User-Agent")) && boolean(ctx.query.pricing)) ? false : "border-md-top border-themed",
    data-src=manifest("img/art/stars.svg")
  )
    .text-center.d-block.my-3
      .h1.mb-0= t("Pricing")
    .container
      .row.text-center
        .col
          .alert.alert-success.d-inline-block.mb-4.mx-auto
            != t("<strong>Don't worry</strong> &ndash; you can instantly switch plans at anytime.")
      .row.row-cols-1.row-cols-lg-3
        #free.col
          .d-flex.flex-column.rounded-lg.bg-white.bg-themed.position-relative
            .px-md-3.py-md-3.my-3.my-md-0
              .h3.text-center.font-weight-bold
                = t("Free")
              p.text-center.mb-3= t("Only supports email forwarding")
              .lead.text-center.mb-3.text-nowrap
                if user && user.plan !== 'free'
                  span.h5.font-weight-bold.d-block= t("Already upgraded")
                  s.d-block.h6.text-muted!= t('$0/month for <span class="text-decoration-underline">unlimited domains</span>')
                else
                  != t('<span class="d-inline-block h4 mb-0 font-weight-bold">$0</span><span class="d-inline-block h6 text-black text-themed-50">/month for <span class="text-decoration-underline">unlimited domains</span></span>')
              a.btn.btn-block.btn-dark.font-weight-bold(
                href=l("/my-account/domains/new")
              )
                if user
                  i.fa.fa-plus
                  = " "
                  = t("Add New Domain")
                else
                  = t("Forward your domain's mail")
                  = " "
                  i.fa.fa-angle-double-right.align-middle
            ul.list-group.list-group-flush.mb-1
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-shield-alt.text-themed.mr-3
                = " "
                = t("Spam protection")
                if !isBot(ctx.get("User-Agent"))
                  = " "
                  button.confirm-prompt.btn.btn-link.text-themed.py-0.no-js(
                    type="button",
                    aria-label=t("Spam Scanner"),
                    data-confirm-type="info",
                    data-confirm-show-cancel-button="false",
                    data-confirm-prompt-title=t("Spam Scanner"),
                    data-confirm-prompt-html=t('We built our own anti-spam, phishing, and virus protection software called <a href="https://spamscanner.net" target="_blank" rel="noopener noreferrer">Spam Scanner</a>. It abides by the same privacy-first and zero logging policies.')
                  )
                    i.fa.fa-info-circle
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-paperclip.text-themed.mr-3
                = " "
                != t("50MB attachment limit")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-themed.mr-3
                a.font-weight-bold.text-themed.text-decoration-underline(
                  href=l("/guides/send-mail-as-gmail-custom-domain#legacy-free-guide")
                )
                  = t("Send Mail As with Gmail")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-themed.mr-3
                = " "
                = t("Catch-all email addresses")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-themed.mr-3
                = " "
                = t("Multiple recipients per alias")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-themed.mr-3
                a.font-weight-bold.text-decoration-underline.text-themed(
                  href=l("/free-email-webhooks"),
                  target="_blank"
                )
                  = t("Send emails to webhooks")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-themed.mr-3
                a.font-weight-bold.text-decoration-underline.text-themed(
                  href=l("/email-forwarding-regex-pattern-filter"),
                  target="_blank"
                )
                  = t("Regular expression filtering")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-check-circle.text-themed.mr-3
                ul.list-inline.mb-0
                  li.list-inline-item.mr-1.small= t("Supports")
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#do-you-support-webhooks")
                    )
                      = "HTTP"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#do-you-support-sending-email-with-api")
                    )
                      = "API"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-spf-for-forward-email")
                    )
                      = "SPF"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-dkim-for-forward-email")
                    )
                      = "DKIM"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-dmarc-for-forward-email")
                    )
                      = "DMARC"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#do-you-support-email-best-practices")
                    )
                      = "ARC"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-srs-for-forward-email")
                    )
                      = "SRS"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-mta-sts-for-forward-email")
                    )
                      = "MTA-STS"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-you-perform-dns-lookups-on-domain-names")
                    )
                      = "DNS over HTTPS"
                      = " "
                      i.fa.fa-angle-right
        #enhanced.col.mt-3.mt-lg-0
          .d-flex.flex-column.rounded-lg.bg-white.bg-themed.position-relative
            .px-md-3.py-md-3.my-3.my-md-0
              .h3.text-center.font-weight-bold
                = t("Enhanced")
                = " "
                = emoji("lock")
              p.text-center.mb-3!= t('Send &amp; receive as <span class="notranslate">you@yourdomain.com</span>')
              .lead.text-center.mb-3.text-nowrap
                if user && user.plan !== 'free'
                  span.h5.font-weight-bold.d-block= t("Already upgraded")
                  s.d-block.h6.text-muted!= t('$3/month for <span class="text-decoration-underline">unlimited domains</span>')
                else
                  != t('<span class="d-inline-block h4 mb-0 font-weight-bold">$3</span><span class="d-inline-block h6 text-black text-themed-50">/month for <span class="text-decoration-underline">unlimited domains</span></span>')
              if sortedDomains.length === 0
                a.btn.btn-block.btn-lg.btn-success.font-weight-bold.text-nowrap(
                  href=l("/my-account/domains/new?plan=enhanced_protection")
                )
                  != t('Get <span class="notranslate">you@yourdomain.com</span>')
                  = " "
                  i.fa.fa-angle-double-right.align-middle
              else
                .btn-group.btn-block
                  button.btn.btn-block.btn-success.dropdown-toggle(
                    type="button",
                    data-toggle="dropdown",
                    aria-haspopup="true",
                    aria-expanded="false",
                    data-boundary="window"
                  )= t("Select Domain")
                  .dropdown-menu.w-100
                    each domain in sortedDomains
                      a.dropdown-item(
                        href=l(`/my-account/domains/${domain.name}/billing?plan=enhanced_protection`),
                        class=domain.plan === "enhanced_protection" ? "disabled" : "",
                        aria-disabled=domain.plan === "enhanced_protection" ? "true" : "false"
                      )
                        = domain.name
                        if domain.plan === 'enhanced_protection'
                          = " ("
                          = t("already on this plan")
                          = ")"
                    .dropdown-divider
                    a.dropdown-item(
                      href=l("/my-account/domains/new?plan=enhanced_protection")
                    )
                      i.fa.fa-plus
                      = " "
                      = t("Add New Domain")

            ul.list-group.list-group-flush.mb-1
              li.list-group-item.d-flex.align-items-center.border-top.border-themed.bg-dark.text-white.font-weight-bold
                i.fa.fa-fw.fa-arrow-up.mr-3.d-lg-none
                i.fa.fa-fw.fa-arrow-left.mr-3.d-none.d-lg-inline
                = " "
                = t("Everything in Free plus:")
              li.list-group-item.d-flex.align-items-center.bg-primary.text-white.font-weight-bold.text-nowrap
                i.fa.fa-fw.fa-infinity.mr-3
                = " "
                span.text-decoration-underline= t("Unlimited aliases")
                = " "
                span.small.ml-1
                  = "("
                  = t("$0/user")
                  = ")"
                if !isBot(ctx.get("User-Agent"))
                  = " "
                  button.confirm-prompt.btn.btn-link.text-themed.py-0.no-js(
                    type="button",
                    aria-label=t("Unlimited Aliases"),
                    data-confirm-type="info",
                    data-confirm-show-cancel-button="false",
                    data-confirm-prompt-title=t("Unlimited Aliases"),
                    data-confirm-prompt-html=t('Unlike other email services, we do not charge extra per user (commonly referred to as an "alias").  This means you can create as many aliases as you want without extra hidden fees. For example, you can create mailboxes for <span class="notranslate">you@yourdomain.com</span>, <span class="notranslate">info@yourdomain.com</span>, <span class="notranslate">help@yourdomain.com</span>, and <span class="notranslate">sales@yourdomain.com</span> &ndash; and you still only pay $3/mo for everything.')
                  )
                    i.fa.fa-info-circle
              li.list-group-item.d-flex.align-items-center.font-weight-bold.bg-success.text-white
                i.fa.fa-fw.fa-lock.mr-3
                = " "
                = t("10 GB pooled storage")
                if !isBot(ctx.get("User-Agent"))
                  = " "
                  button.btn.btn-link.text-themed.py-0.no-js(
                    type="button",
                    aria-label=t("Email Storage"),
                    data-toggle="modal",
                    data-target="#modal-storage"
                  )
                    i.fa.fa-info-circle
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-check-circle.text-themed.mr-3
                ul.list-inline.mb-0
                  li.list-inline-item.mr-1.small= t("Works with")
                  //- Apple
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/apple-email-clients"),
                      target="_blank"
                    )
                      = "Apple"
                      != "&reg;"
                  //- Windows
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/windows-email-clients"),
                      target="_blank"
                    )
                      = "Windows"
                      != "&reg;"
                  //- Android
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/android-email-clients"),
                      target="_blank"
                    )
                      i.fa-fw.fab.fa-android
                      = " "
                      = "Android"
                      != "&trade;"
                  //- Linux
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/linux-email-clients"),
                      target="_blank"
                    )
                      i.fa-fw.fab.fa-linux
                      = " "
                      = "Linux"
                      != "&reg;"
                  //- Desktop
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/desktop-email-clients"),
                      target="_blank"
                    )
                      i.fa-fw.fas.fa-desktop
                      = " "
                      = t("Desktop")
                  //- Web
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/web-email-clients"),
                      target="_blank"
                    )
                      if ctx.get("User-Agent") && ctx.get("User-Agent").includes("Firefox")
                        i.fab.fa-fw.fa-firefox-browser
                        = " "
                        = "Firefox"
                        != "&reg;"
                      else if ctx.get("User-Agent") && ctx.get("User-Agent").includes("Safari") && !ctx.get("User-Agent").includes("Chrome")
                        = " "
                        = "Safari"
                        != "&reg;"
                      else
                        i.fab.fa-fw.fa-chrome
                        = " "
                        = "Chrome"
                        != "&reg;"
                  //- Terminal
                  li.list-inline-item.lead
                    a.badge.badge-light(
                      href=l("/blog/open-source/terminal-email-clients"),
                      target="_blank"
                    )
                      i.fa-fw.fas.fa-terminal
                      = " "
                      = "Terminal"
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-lock.mr-3
                = " "
                = t("Secure inbox privacy")
                if !isBot(ctx.get("User-Agent"))
                  = " "
                  button.confirm-prompt.btn.btn-link.text-themed.py-0.no-js(
                    type="button",
                    aria-label=t("Encrypted Configuration"),
                    data-confirm-type="info",
                    data-confirm-show-cancel-button="false",
                    data-confirm-prompt-title=t("Encrypted Configuration"),
                    data-confirm-prompt-html=t("No publicly searchable DNS records are used.  Instead we store your configuration in a secure and backed-up database.")
                  )
                    i.fa.fa-info-circle
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-envelope.text-themed.mr-3
                = " "
                a.font-weight-bold.text-themed(
                  href=l("/faq#do-you-support-sending-email-with-smtp"),

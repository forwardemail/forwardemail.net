        if i === breadcrumbs.length - 1
          li.breadcrumb-item.active(aria-current="page")
            if _.isObject(breadcrumb) && breadcrumb.href
              a.text-themed(
                href=_.isObject(breadcrumb) ? breadcrumb.href : `/${breadcrumbs.slice(0, i + 1).join("/")}/`

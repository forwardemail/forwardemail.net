                            input(
                              type="hidden",
                              name="domains",
                              value=ctx.query.domains
                            )
                          if ctx.query.bounce_category
                            input(
                              type="hidden",
                              name="bounce_category",
                              value=ctx.query.bounce_category
                            )
                          if ctx.query.show_errors
                            input(
                              type="hidden",
                              name="show_errors",
                              value=ctx.query.show_errors
                            )
                          if ctx.query.q
                            input(type="hidden", name="q", value=ctx.query.q)
                          each code in responseCodes
                            .form-check
                              input.form-check-input(
                                type="checkbox",
                                name="response_codes",
                                value=code,
                                id=`code-${code}`,
                                checked=selectedCodesSet.has(String(code))
                              )
                              label.form-check-label(for=`code-${code}`)= code

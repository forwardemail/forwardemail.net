meta(charset="utf-8")
meta(http-equiv="x-ua-compatible", content="ie=edge")
if meta && meta.title
  title= striptags(convert(meta.title))
if meta && meta.description
  meta(name="description", content=striptags(convert(meta.description)))
meta(name="viewport", content="width=device-width, initial-scale=1")

//- Additional SEO meta tags
meta(
  name="robots",
  content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
)
meta(name="author", content="Forward Email LLC")
meta(name="publisher", content="Forward Email")
meta(name="copyright", content="Forward Email LLC")
meta(name="rating", content="general")
meta(name="distribution", content="global")
meta(name="revisit-after", content="7 days")

//- Keywords meta tag (translated for each locale)
if ctx.pathWithoutLocale === '/'
  meta(
    name="keywords",
    content=t("email forwarding") + ", " + t("custom domain email") + ", " + t("free email hosting") + ", " + t("email aliases") + ", SMTP, IMAP, POP3, " + t("open source email") + ", " + t("privacy email") + ", " + t("secure email") + ", " + t("business email") + ", " + t("professional email")
  )
else if ctx.pathWithoutLocale && ctx.pathWithoutLocale.startsWith('/guides/')
  meta(
    name="keywords",
    content=t("email setup guide") + ", " + t("DNS configuration") + ", " + t("MX records") + ", " + t("email forwarding tutorial") + ", " + t("custom domain email setup") + ", " + t("SMTP configuration")
  )
else if ctx.pathWithoutLocale && ctx.pathWithoutLocale.startsWith('/blog/')
  meta(
    name="keywords",
    content=t("email service comparison") + ", " + t("email provider review") + ", " + t("open source email") + ", " + t("privacy email") + ", " + t("secure email service")
  )


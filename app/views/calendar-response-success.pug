extends layout
block body
  .min-vh-80.d-flex.flex-column
    .container.py-5
      .row.justify-content-center
        .col-md-8.col-lg-6
          .card.border-themed
            .card-body.text-center.py-5
              i.fa.fa-check-circle.text-success.fa-4x.mb-4
              h2.h4.mb-3= t("Response Recorded")
              p.text-muted.mb-4= t("Your calendar response has been recorded. The event organizer will be notified.")
              p.small.text-muted= t("You can close this window now.")
          .alert.alert-light.mt-3.text-center.small
            = t("This invitation was sent via")
            |
            = " "
            a(
              href="https://forwardemail.net",
              target="_blank",
              rel="noopener noreferrer"
            )= t("Forward Email")
            = ", "
            = t("a privacy-focused email service.")

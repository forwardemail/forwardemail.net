            span(aria-hidden='true') &times;
        .modal-body
          .lazyframe(data-initinview='true', title=t('Free Email Forwarding for Creators'), style='width:100%;height:450px;', data-vendor='youtube_nocookie', data-src='https://www.youtube-nocookie.com/embed/ql9rtNpTid4?autoplay=0')
  #modal-for-developers.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-for-developers-title', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header.text-center.d-block
          h1.h4.modal-title.d-inline-block.ml-4#modal-for-developers-title= t('Free Email Forwarding for Developers')
          button(type='button', data-dismiss='modal', aria-label='Close').close
            span(aria-hidden='true') &times;
        .modal-body
          .lazyframe(data-initinview='true', title=t('Free Email Forwarding for Developers'), style='width:100%;height:450px;', data-vendor='youtube_nocookie', data-src='https://www.youtube-nocookie.com/embed/1e9UyIoFu4Y?autoplay=0')

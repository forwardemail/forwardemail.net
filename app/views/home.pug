      .h2.display-3.mb-1.text-danger
        i.fab.fa-youtube
      h1.display-4.text-uppercase.font-weight-bold!= t('Made for <u>you</u>.')
    .row
      .col-md.text-center.d-block.mb-5
        .lazyframe.border.border-dark.d-inline-block(data-initinview='true', data-vendor='youtube_nocookie', title=t('How to create unlimited email addresses and aliases'), style='max-width:100%; border-width:0.5rem !important;width:640px;height:360px', data-src='https://www.youtube-nocookie.com/embed/oWEVGMPXMbA?autoplay=0')
    .row
      .col-md.text-center.mb-3.mb-md-0
        button.btn.btn-outline-dark.btn-lg.text-uppercase.font-weight-bold(type='button', data-toggle='modal', data-target='#modal-for-creators')
          i.fa.fa-play-circle
          = ' '
          if isBot(ctx.get('User-Agent'))
            = t('Website Email Forwarding')
          else
            = t('Creators')
      .col-md.text-center.mb-3.mb-md-0
        button.btn.btn-outline-dark.btn-lg.text-uppercase.font-weight-bold(type='button', data-toggle='modal', data-target='#modal-for-developers')
          i.fa.fa-play-circle
          = ' '
          if isBot(ctx.get('User-Agent'))
            = t('Startup Email Forwarding')
          else
            = t('Developers')
      .col-md.text-center
        button.btn.btn-outline-dark.btn-lg.text-uppercase.font-weight-bold(type='button', data-toggle='modal', data-target='#modal-for-businesses')
          i.fa.fa-play-circle
          = ' '
          if isBot(ctx.get('User-Agent'))
            = t('Shopify Email Forwarding')
          else
            = t('Businesses')
  .container-fluid.bg-dark.py-3.px-5.py-md-5.d-block
    h2.display-3.font-weight-bold.text-white.my-3.my-md-5
      i.fa.fa-fingerprint
      = ' '
      = t('Protect your inbox.')
    .row
      .col-12.col-md-9.col-lg-6
        p.lead.text-white.mb-3.mb-md-5
          != t('We use industry standard email header validation and signature checks, spam prevention tools, DNS blacklist lookups, and domain verification.  All powered by Cloudflare\'s <a href="https://blog.cloudflare.com/announcing-1111/" target="_blank" rel="noopener noreferrer" class="text-white">privacy-first consumer DNS service</a>.')
        a.btn.btn-outline-light.btn-lg.mb-md-5(href=l('/register'), role="button", data-toggle='modal-anchor', data-target='#modal-sign-up')
          = t('Stay protected')
          = ' '
          i.fa.fa-angle-double-right
      .d-flex.col-md-3.col-lg-6.pt-3
        img(src=manifest('img/logo-square.svg'), width=200, height=200, alt="").mt-auto.ml-auto.flex-shrink-0.mb-3.mb-md-0
  .pt-5.pb-lg-5.text-center.bg-light
    .h2.display-3.mb-1.text-danger
      i.fa.fa-heart
    h2.display-5.font-weight-light.mb-0.text-uppercase= t('Our Features')

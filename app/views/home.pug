        .modal-header.text-center.d-block
          h1.h4.modal-title.d-inline-block.ml-4#modal-for-businesses-title= t('Free Email Forwarding for Businesses')
          button(type='button', data-dismiss='modal', aria-label='Close').close
            span(aria-hidden='true') &times;
        .modal-body
          .lazyframe(data-initinview='true', title=t('Free Email Forwarding for Businesses'), style='width:100%;height:450px;', data-vendor='youtube_nocookie', data-src='https://www.youtube-nocookie.com/embed/--p9LdmVSAw?autoplay=0')
  .min-vh-80.text-center.d-flex.flex-column
    .container.my-auto.py-2.py-sm-3.py-md-5
      .row
        .col-12.col-lg-10.offset-lg-1
          h1.display-4.font-weight-bold.mb-3!= t('Free Email Forwarding')
          p.lead.mb-3.mb-lg-0.d-block
            != t('Create <strong class="font-weight-bold">unlimited</strong> email addresses for free using your custom domain.')
          p.lead.mb-3.d-none.d-lg-block
            != t('Plus get catch-all, wildcard, and disposable aliases &ndash; all for free!')

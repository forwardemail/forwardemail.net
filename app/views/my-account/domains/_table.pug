                else
                  a.mr-2.text-reset(
                    href=l(`/my-account/domains/${punycode.toASCII(domain.name)}`),
                    data-toggle="tooltip",
                    data-placement="bottom",
                    data-html="true",
                    data-title=t("MX record missing. This record is required to route incoming emails to our servers. Click to complete setup.")
                  )
                    = "MX "
                    i.fa.fa-times-circle.text-danger

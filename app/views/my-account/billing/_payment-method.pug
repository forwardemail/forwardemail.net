mixin paymentMethod(payment)
  if payment.method === 'paypal'
    if !returnHTML
      i.fab.fa-paypal
      = ' '
    = 'PayPal'
  else
    if !returnHTML
      case payment.method
        when 'amex'
          i.fa.fa-cc-amex
        when 'diners'
          i.fa.fa-cc-diners-club
        when 'discover'
          i.fa.fa-cc-discover
        when 'jcb'
          i.fa.fa-cc-jcb
        when 'mastercard'
          i.fa.fa-cc-mastercard
        when 'visa'
          i.fa.fa-cc-visa
        when 'free_beta_program'
        when 'unknown'
          i.fa.fa-gift
        when 'alipay'
          i.fa.fa-alipay
        when 'ideal'
          i.fa.fa-ideal
        when 'unionpay'
          i.fa.fa-credit-card
        default
          i.fa.fa-money-check-alt
      = " "
    = titleize(humanize(payment.method))
    if payment.last4
      = ' '
      = t('ending with')
      = ' '
      = payment.last4
    if payment.exp_month && payment.exp_year
      = ' '
      span.text-uppercase= `(${payment.exp_month}/${payment.exp_year.toString().slice(2)})`
    if payment.is_apple_pay
      = ' '
      = t('via')
      = ' '
      i.fa.fa-cc-apple-pay
      = ' '
      = 'Apple Pay'
    else if payment.is_google_pay
      = ' '
      = t('via')
      = ' '
      i.fa.fa-google-pay
      = ' '
      = 'Google Pay'

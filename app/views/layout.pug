            href=manifest("css/app-bot.css"),
            integrity=manifest("css/app-bot.css", "integrity"),
            crossorigin="anonymous"
          )
        else
          link(
            rel="stylesheet",
            href=manifest("css/app-bot.css"),
            integrity=manifest("css/app-bot.css", "integrity"),
            crossorigin="anonymous"
          )
      else
        if isPDF || ctx.path.endsWith(".pdf") || config.env === 'test'
          link(

[Unit]
Description=Lynis Audit Monitor
After=network.target
Docs=https://github.com/forwardemail/forwardemail.net

[Service]
Type=oneshot
ExecStart=/usr/local/bin/lynis-audit-monitor.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=lynis-audit-monitor
User=root
Group=root

[Install]
WantedBy=multi-user.target

[Unit]
Description=Package Monitor
After=network.target
Docs=https://github.com/forwardemail/forwardemail.net

[Service]
Type=oneshot
ExecStart=/usr/local/bin/package-monitor.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=package-monitor
User=root
Group=root

[Install]
WantedBy=multi-user.target

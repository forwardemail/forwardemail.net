{
  "apps": [
    {
      "name": "sqlite",
      "script": "sqlite.js",
      "max_restarts": 999,
      "max_memory_restart": "80G",
      "wait_ready": true,
      "exec_mode": "cluster",
      "instances": "4",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production"
      },
      "error_file": "/var/log/pm2/sqlite-error.log",
      "out_file": "/var/log/pm2/sqlite-out.log",
      "combine_logs": true,
      "merge_logs": true
    },
    {
      "name": "sqlite-bree",
      "script": "sqlite-bree.js",
      "max_restarts": 999,
      "max_memory_restart": "80G",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production"
      },
      "error_file": "/var/log/pm2/sqlite-bree-error.log",
      "out_file": "/var/log/pm2/sqlite-bree-out.log",
      "combine_logs": true,
      "merge_logs": true
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": [
        "121.127.44.61"
      ],
      "ref": "origin/master",
      "repo": "git@github.com:forwardemail/forwardemail.net.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-sqlite.json --env production --update-env"
    }
  }
}

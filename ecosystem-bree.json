{
  "apps": [
    {
      "name": "bree",
      "script": "bree.js",
      "max_restarts": 999,
      "max_memory_restart": "28G",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "error_file": "/var/log/pm2/bree-error.log",
      "out_file": "/var/log/pm2/bree-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["121.127.44.75"],
      "ref": "origin/master",
      "repo": "git@github.com:forwardemail/forwardemail.net.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-bree.json --env production --update-env"
    }
  }
}

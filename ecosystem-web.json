{
  "apps": [
    {
      "name": "web",
      "script": "web.js",
      "max_restarts": 999,
      "max_memory_restart": "8G",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "pmx": false,
      "error_file": "/var/log/pm2/web-error.log",
      "out_file": "/var/log/pm2/web-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "HTTP_PORT": 443,
        "HTTP_PROTOCOL": "https"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "max_restarts": 999,
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "error_file": "/var/log/pm2/proxy-error.log",
      "out_file": "/var/log/pm2/proxy-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "PROXY_PORT": 80
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["121.127.44.69"],
      "ref": "origin/master",
      "repo": "git@github.com:forwardemail/forwardemail.net.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-web.json --env production --update-env"
    }
  }
}

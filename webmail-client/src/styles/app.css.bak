      .fe-storage {
        margin-top: 12px;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid var(--color-border);
        background: rgba(255, 255, 255, 0.03);
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .fe-storage-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #cbd5e1;
      }


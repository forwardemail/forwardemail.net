          height: auto;
          min-height: 100vh;
          padding: 16px;
        }
        .fe-mailbox-shell,
        .fe-mailbox-shell.fe-shell-collapsed {
          grid-template-columns: 1fr !important;
          height: auto;
          max-height: none;
        }
        .fe-mailbox-header {
          flex-direction: row;
          align-items: center;
          gap: 10px;
          flex-wrap: nowrap;
        }
        .fe-folders {
          display: none;
          position: fixed;
          top: 72px;
          left: 0;
          width: 80%;
          max-width: 320px;
          height: calc(100vh - 80px);
          z-index: 30;
          box-shadow: 0 20px 50px rgba(0, 0, 0, 0.35);
        }
        .fe-folders.fe-folders-open {
          display: block;
        }
        .fe-sidebar-backdrop {
          display: none;
          position: fixed;
          inset: 0;
          background: rgba(0, 0, 0, 0.35);
          z-index: 25;
        }
        .fe-sidebar-backdrop.visible {
          display: block;
        }
        .fe-folders,
        .fe-messages,
        .fe-reader {
          min-height: 200px;
          max-height: none;
          width: 100%;
        }

        .fe-messages {
          height: auto;
          min-height: calc(100vh - 250px);
          display: flex !important;
        }

        .fe-folders.fe-folders-open ~ * .fe-messages {
          pointer-events: none;
        }

        .fe-reader {
          display: none;
        }

        .mobile-reader .fe-messages {
          display: none;
        }

        .mobile-reader .fe-reader {
          display: block;
        }

        .fe-mailbox-shell {
          height: auto;
          max-height: none;
          overflow: visible;
        }

        /* Hide calendar when modal is open on mobile */
        .fe-modal-backdrop + .fe-calendar-shell,
        .fe-calendar-shell:has(~ .fe-modal-backdrop[style*="display: block"]) {
          visibility: hidden;

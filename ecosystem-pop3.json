{
  "apps": [
    {
      "name": "pop3-995",
      "script": "pop3.js",
      "max_restarts": 999,
      "max_memory_restart": "20G",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "pmx": false,
      "error_file": "/var/log/pm2/pop3-995-error.log",
      "out_file": "/var/log/pm2/pop3-995-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "POP3_PORT": 995
      }
    },
    {
      "name": "pop3-2995",
      "script": "pop3.js",
      "max_restarts": 999,
      "max_memory_restart": "20G",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "error_file": "/var/log/pm2/pop3-2995-error.log",
      "out_file": "/var/log/pm2/pop3-2995-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "POP3_PORT": 2995
      }
    },
    {
      "name": "proxy-http",
      "script": "proxy.js",
      "max_restarts": 999,
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "error_file": "/var/log/pm2/proxy-http-error.log",
      "out_file": "/var/log/pm2/proxy-http-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "PROXY_PORT": 80,
        "PROXY_REDIRECT": "https://forwardemail.net"
      }
    },
    {
      "name": "proxy-https",
      "script": "proxy.js",
      "max_restarts": 999,
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "error_file": "/var/log/pm2/proxy-https-error.log",
      "out_file": "/var/log/pm2/proxy-https-out.log",
      "combine_logs": true,
      "merge_logs": true,
      "env_production": {
        "NODE_ENV": "production",
        "PROXY_PORT": 443,
        "PROXY_PROTOCOL": "https",
        "PROXY_REDIRECT": "https://forwardemail.net"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["121.127.44.71"],
      "ref": "origin/master",
      "repo": "git@github.com:forwardemail/forwardemail.net.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-pop3.json --env production --update-env"
    }
  }
}
